extends layout

block content
  <div class="container-fluid" align="right">
    <label> Select an Instructor:
      <select id="instructor-select" class="selectpicker" data-live-search="true">
      </select>
    </label>
  </div>
  <div class="container-fluid">
  <div class="row">
    <h2 id="instructor-title" style="text-align: center"></h2>
    <h4 id="most-recent-year" style="text-align: center"></h4>
      <div class="col-md-3">
        <div class="card"> 
          <div class="card-block">
            <h4 class="card-title">Mean UMI6</h4>
            <div class="card-stats" id="instructor-umi"></div>
            <div class="card-comparison"></div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card"> 
          <div class="card-block">
            <h4 class="card-title">Percent Favourable</h4>
            <div class="card-stats" id="instructor-pf"></div>
            <div class="card-comparison"></div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card"> 
          <div class="card-block">
            <h4 class="card-title">Number of Courses Taught</h4>
            <div class="card-stats" id="instructor-courses-count"></div>
            <div class="card-comparison"></div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card"> 
          <div class="card-block">
            <h4 class="card-title">Number of Students Taught</h4>
            <div class="card-stats" id="instructor-students-count"></div>
            <div class="card-comparison"></div>
          </div>
        </div>
      </div>
  </div>
  </div>
  </div>

  <div class="container-fluid">
    <div class="card">
      h2="UMI6 Average By Term"
      <div id="UMI6Scatterplot">
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="card"> 
      <div class="card-block">
        h2="Instructor Ranking"
        <div id="instructorRankingGraph">
          <div class="row">
            <div class="col-md-3"><select class="selectpicker" id="instructorRankingYearFilter"></select></div>
            <div class="col-md-3">
            <select id="irQuestionFilter" class="selectpicker">
              <option>UMI1</option>
              <option>UMI2</option>
              <option>UMI3</option>
              <option>UMI4</option>
              <option>UMI5</option>
              <option>UMI6</option>
            </select>
            </div>
            <div class="col-sm-2"><label>Filter by Class Size:</label></div>
            <div class="col-md-3" id="slider"></div>
          </div>
          <canvas id="instructorRankingChartCanvas"></canvas>
        </div>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="card"> 
      <div class="card-block">
        h2="Course Performance"
        <div class="container-fluid" align="right">
          <label> Select UMI Question Code(s):
            <select id="cpQuestionFilter" class="selectpicker" multiple>
              <option>UMI1</option>
              <option>UMI2</option>
              <option>UMI3</option>
              <option>UMI4</option>
              <option>UMI5</option>
              <option>UMI6</option>
            </select>
        </label>
          </div>
        <table id="CoursePerformance" class="display" cellspacing="0"></table>
        </div>
          </div>
      </div>
    </div>
    </div>