extends layout

block content
  <div class="container">
    h1= title
    <div class="settings-panel" style="display: none;">
      <div id="spinner"></div>
      <div class="row" id="settings-panel">
        <div class="col-md-6">
          <div>
            Time Period
            <select id="yearSelection">

            </select>
            <select id="termSelection">

            </select>
          </div>
          <div>
            Course Level
            <select id="courseLevelSelection">

            </select>
          </div>
          <div>
            Department
            <select id="deptSelection">

            </select>
          </div>
          <div>
            Question Code
            <select id="questionCodeSelection" style="width:300px;">

            </select>
          </div>
        </div>
        <div class="col-md-6">
          <div>
            Toggle below minimum <input type="checkbox" id="toggleBelowMinSelection">
          </div>
          <div>
            Filter by minimum class size 
            <form><input style="width: 50%;" type="range" id="classSizeMin" min="0" max="300" value="0" oninput="classSizeMin.value = classSizeMin.value"><output id="classSizeMin"></output></form>
          </div>
          <div>
            Filter by maximum class size 
            <form><input style="width: 50%;" type="range" id="classSizeMax" min="0" max="300" value="300" oninput="classSizeMin.value = classSizeMin.value"><output id="classSizeMax"></output></form>
          </div>
        </div>
      </div>
    </div>
    <div id="umiTrendLine"></div>

    h2="Faculty UMI6 Trend"
    <div id="facultyUMITrend"></div>

    h2="APBI UMI6 Trend"
    <div id="apbiUMITrend"></div>

    h2="Course Enrolment Trend"
    <div id="enrolmentTrendLine">
      <select class="selectpicker" id="enrolmentTrendCourse" data-live-search="true"></select>
      <select class="selectpicker" id="enrolmentTrendTerm" data-live-search="true"></select>
    </div>

    h2="umiVSDispersion"
    <div id="UMIvsDispersionGraph" style="display: inline-block; width: 100%;"></div>

    h2="overallInstructor"
    <table id="OverallInstructors" class="display" cellspacing="0"></table>

    h2="umiInstructor"
    <select id="umiInstructorFilter" class="selectpicker" data-live-search="true">
    </select>
    <table id="UMIInstructors" class="display" cellspacing="0"></table>

  h2="coursePerformance"
  <select id="cpInstructorFilter" class="selectpicker" data-live-search="true">
  </select>
  <select id="cpQuestionFilter" class="selectpicker">
    <option>UMI1</option>
    <option>UMI2</option>
    <option>UMI3</option>
    <option>UMI4</option>
    <option>UMI5</option>
    <option>UMI6</option>
  </select>
  <table id="CoursePerformance" class="display" cellspacing="0"></table>
  </div>
